# Production Environment Variables Template
# Copy this file to .env.prod and fill in your production values
# NEVER commit the actual .env.prod file to version control

# MySQL Configuration
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=rails_production
MYSQL_USER=rails
MYSQL_PASSWORD=your_secure_mysql_password_here

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Elasticsearch Configuration
ELASTICSEARCH_HOST=127.0.0.1
ELASTICSEARCH_PORT=9200
ELASTIC_PASSWORD=your_secure_elastic_password_here

# Rails Application Configuration
RAILS_ENV=production
SECRET_KEY_BASE=your_secret_key_base_here
