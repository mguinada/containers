#!/bin/bash

# Docker Compose Setup Script for Rails Dependencies
# This script sets up the environment and starts the services

echo "ğŸš€ Setting up Docker Compose for Rails Dependencies..."

# Check if .env file exists
if [ ! -f .env ]; then
    echo "ğŸ“‹ Creating .env file from template..."
    cp env.example .env
    echo "âœ… .env file created successfully"
else
    echo "âœ… .env file already exists"
fi

# Start the services
echo "ğŸ³ Starting Docker services..."
docker-compose up -d

# Check if services are running
echo "ğŸ” Checking service status..."
docker-compose ps

echo ""
echo "ğŸ‰ Setup complete! Your Rails services are now running:"
echo "   â€¢ MySQL: 127.0.0.1:33308 (root, no password)"
echo "   â€¢ Redis: 127.0.0.1:6379"
echo "   â€¢ Elasticsearch: http://127.0.0.1:9200"
echo ""
echo "To stop services: docker-compose down"
echo "To view logs: docker-compose logs -f"
